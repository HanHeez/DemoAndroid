<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSanPham">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarChitiet"
        android:background="#ffc79c"
        android:layout_width="match_parent"
        app:title="Chi tiết sản phẩm"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgChitietsp"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenchitietsp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtGiachitietsp"
                android:textColor="#e10202"
                android:textStyle="bold"
                android:text="Gía sản phẩm"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:background="@drawable/spinner"
                android:layout_margin="3dp"
                android:layout_marginTop="20dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            <Button
                android:id="@+id/btnDatmua"
                android:textColor="#af5e0c"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:text="Thêm Giỏ Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="30sp"
            android:layout_marginTop="5sp"
            android:textColor="#11a36d"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:text="Mô tả"
                android:id="@+id/txtMotachitietsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>