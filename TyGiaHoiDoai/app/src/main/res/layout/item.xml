<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/vn" />

    <TextView
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgFlag"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imgFlag"
        android:layout_toRightOf="@+id/imgFlag"
        android:text="Mua TM: " />

    <TextView
        android:textStyle="bold"
        android:textColor="#4cd6c6"
        android:id="@+id/txtMuaTM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/txtMuaTM"
        android:layout_toRightOf="@+id/txtMuaTM"
        android:text="Ban TM:" />

    <TextView
        android:textStyle="bold"
        android:textColor="#4cd6c6"
        android:id="@+id/txtBanTM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="Mua CK:" />

    <TextView
        android:textStyle="bold"
        android:textColor="#4cd6c6"
        android:id="@+id/txtMuaCK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMuaTM"
        android:layout_alignStart="@+id/txtMuaTM"
        android:layout_below="@+id/txtMuaTM"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/txtMuaCK"
        android:text="Ban CK:" />

    <TextView
        android:textStyle="bold"
        android:textColor="#4cd6c6"
        android:id="@+id/txtBanCK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtBanTM"
        android:layout_alignStart="@+id/txtBanTM"
        android:layout_alignTop="@+id/textView7"
        android:text="TextView" />
</RelativeLayout>
