<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/khungWifi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTenWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TenWifi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:padding="5dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMatkhauWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MatkhauWifi" />
        </LinearLayout>
        -

        <LinearLayout
            android:padding="5dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đăng: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNgaydangWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/5/2018" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

